                RelativeLayout:
                        id: research_widget
                        size_hint: (0.5, 0.75)
                        pos_hint: {'center_x': 0.3, 'top': 0.8}

                Button:
                        id: switch_route
                        text: "Begin Route Generation"
                        font_size: button_fs
                        color: button_fc
                        on_press: root.switch_route()
                        size_hint: (0.2, 0.1)
                        pos_hint: {'center_x': 0.8, 'top': 0.8}
                        background_normal: ''
                        background_color: white
                        canvas.before:
                                Color:
                                        rgba: black_fade
                                BoxShadow:
