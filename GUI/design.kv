#:set button_fc [0.447, 0.447, 0.447, 1]
#:set button_size (0.3 , 0.1)
#:set button_fs 40

#:set blur 20

#:set white [0.98 , 0.98 , 0.98 ,1]
#:set red [0.8 , 0.2 , 0.2 , 1]
#:set black_fade [0 , 0 , 0 , 0.85]
#:set gray [0 , 0 , 0 , 0.5]
#:set black [0.0, 0.0, 0.0, 1]

<StartScreen>:

        RelativeLayout:

                Label:

                        id: wolf
                        text: "WOLF"
                        font_size: 150
                        bold: True
                        color: red
                        size_hint: (1.0, 0.15)
                        pos_hint: {'center_x': 0.25, 'top': 0.8}

                Image:

                        id: logo
                        source: 'WW_Logo.png'
                        size_hint: (1, 0.6)
                        pos_hint: {'center_x': 0.5, 'top': 1.0}

                Label:

                        id: wagen
                        text: "WAGEN"
                        font_size: 150
                        bold: True
                        color: red
                        size_hint: (1, 0.15)
                        pos_hint: {'center_x': 0.75, 'top': 0.8}
                
                Button:
                        id: research_button
                        text: 'Research'
                        font_size: button_fs
                        color: button_fc
                        on_press: root.manager.current = 'research_screen'
                        size_hint: button_size
                        pos_hint: {'center_x': 0.25, 'top': 0.25}
                        background_normal: ''
                        background_color: white
                        canvas.before:
                                Color:
                                        rgba: black_fade
                                BoxShadow:
                                        pos: self.pos
                                        size: self.size
                                        offset: 0, -10
                                        spread_radius: -20, -20
                                        border_radius: 10 , 10 , 10 , 10
                                        blur_radius: blur if self.state == "normal" else 50

                Button:
                        id: prototype_button
                        text: 'Prototype'
                        font_size: button_fs
                        color: button_fc
                        on_press: root.manager.current = 'prototype_screen'
                        size_hint: button_size
                        pos_hint: {'center_x': 0.75, 'top': 0.25}
                        background_normal: ''
                        background_color: white
                        canvas.before:
                                Color:
                                        rgba: black_fade
                                BoxShadow:
                                        pos: self.pos
                                        size: self.size
                                        offset: 0, -10
                                        spread_radius: -20, -20
                                        border_radius: 10 , 10 , 10 , 10
                                        blur_radius: blur if self.state == "normal" else 50

<ResearchScreen>

        RelativeLayout:

                Button:
                        id: back
                        text: "Back"
                        font_size: button_fs
                        color: button_fc
                        on_press: root.manager.current = 'start_screen'
                        size_hint: (0.2, 0.1)
                        pos_hint: {'center_x': 0.15, 'top': 0.95}
