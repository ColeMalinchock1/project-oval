<StartScreen>:

        RelativeLayout:

                Label:

                        id: wolf
                        text: "WOLF"
                        font_size: 150
                        bold: True
                        color: red
                        size_hint: (1.0, 0.15)
                        pos_hint: {'center_x': 0.25, 'top': 0.8}

                Image:

                        id: logo
                        source: './Images/WW_Logo.png'
                        size_hint: (1, 0.6)
                        pos_hint: {'center_x': 0.5, 'top': 1.0}

                Label:

                        id: wagen
                        text: "WAGEN"
                        font_size: 150
                        bold: True
                        color: red
                        size_hint: (1, 0.15)
                        pos_hint: {'center_x': 0.75, 'top': 0.8}
                
                Button:
                        id: research_button
                        text: 'Research'
                        font_size: button_fs
                        color: button_fc
                        on_press: root.manager.current = 'research_screen'
                        size_hint: button_size
                        pos_hint: {'center_x': 0.25, 'top': 0.25}
                        background_normal: ''
                        background_color: white
                        canvas.before:
                                Color:
                                        rgba: black_fade
                                BoxShadow:
                                        pos: self.pos
                                        size: self.size
                                        offset: 0, -10
                                        spread_radius: -20, -20
                                        border_radius: 10 , 10 , 10 , 10
                                        blur_radius: blur if self.state == "normal" else 50

                Button:
                        id: prototype_button
                        text: 'Prototype'
                        font_size: button_fs
                        color: button_fc
                        on_press: root.manager.current = 'prototype_screen'
                        size_hint: button_size
                        pos_hint: {'center_x': 0.75, 'top': 0.25}
                        background_normal: ''
                        background_color: white
                        canvas.before:
                                Color:
                                        rgba: black_fade
                                BoxShadow:
                                        pos: self.pos
                                        size: self.size
                                        offset: 0, -10
                                        spread_radius: -20, -20
                                        border_radius: 10 , 10 , 10 , 10
                                        blur_radius: blur if self.state == "normal" else 50

